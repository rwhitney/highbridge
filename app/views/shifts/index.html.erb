<h1>Listing shifts</h1>

<table>
  <tr>
    <th>Shiftdate</th>
    <th>Shiftnum</th>
    <th>E1member</th>
    <th>E2member</th>
    <th>Dmember</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @shifts.each do |shift| %>
  <tr>
    <td><%= shift.shiftdate %></td>
    <td><%= shift.shiftnum %></td>
    <td><%= shift.e1member_id %></td>
    <td><%= shift.e2member_id %></td>
    <td><%= shift.dmember_id %></td>
    <td><%= link_to 'Show', shift %></td>
    <td><%= link_to 'Edit', edit_shift_path(shift) %></td>
    <td><%= link_to 'Destroy', shift, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

