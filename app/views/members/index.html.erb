<h1>Mores Creek Roster</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Num</th>
    <th>Area</th>
    <th>Phone</th>
    <th>Status</th>
	<th>Notes</th>
	<th <% if current_member.admin? %>colspan=2<% end %>>
  </tr>

<% ["EMT","First Responder","Driver","Non Call"].each do |training| %>
	<% @members = Member.get_members_ordered_by_training(training) %>
	<% if @members.count > 0 %>
  <tr>
    <th colspan=<% if current_member.admin? %>"8"<% else %>"7"<% end %>>
		<%= pluralize(@members.count, training) %>
	</th>
  </tr>

<% @members.each do |member| %>
  <tr>
	<td><%= mail_to member.email, member.last_name_first %><br /><%= member.portable_name %></td>
    <td><%= member.portable_number %></td>
    <td><%= member.area %></td>
    <td>
		<% if member.has_home_phone %>h.&nbsp;<%= member.home_phone %><% end %>
		<% if member.has_home_phone && (member.has_work_phone || member.has_cell_phone) %><br /><% end %>
		<% if member.has_work_phone %>w.&nbsp;<%= member.work_phone %><% end %>
		<% if member.has_work_phone && member.has_cell_phone %><br /><% end %>
		<% if member.has_cell_phone %>m.&nbsp;<%= member.cell_or_other_phone %><% end %>
	</td>
    <td><%= member.status %></td>
	<td class="small"><%= member.misc_notes %></td>
    <td><%= link_to 'Details', member %></td>
<% if current_member.admin? %>
    <td><%= link_to 'Edit', edit_member_path(member) %></td>
<% end %>
  </tr>
<% end %> <%# for each member %>
<% end %> <%# if members.count > 0 %>
<% end %> <%# loop for training %>
</table>

<br />
<% if current_member.admin? %>
<%= link_to 'New Member', new_member_path %>
<% end %>
